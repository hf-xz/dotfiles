# config
alias zshconf='$EDITOR ~/.zshrc'
alias aliasconf='$EDITOR ~/.alias && source ~/.alias'
alias sshconf='$EDITOR ~/.ssh/config'
alias gitconf='$EDITOR ~/.gitconfig'

# no-proxy
alias noProxy='unset HTTP_PROXY HTTPS_PROXY http_proxy https_proxy'

# brew
alias brewClean="brew cleanup && brew autoremove"

# lazygit
alias lg='lazygit'

# tmux
alias t='tmux new-session -A -s'

# typora
alias ty='open -a typora' 

# python3
alias python='python3'
alias pip='pip3'

# python venv
alias mkvenv='python3 -m venv .venv'
alias actvenv='. .venv/bin/activate'

# docker-compose
alias compose='docker-compose'

# neovide
alias nv='neovide .'

# ripgrep
alias grep='command rg'

# open method
alias -s py='python3'
alias -s go='go run'
alias -s md=ty

# minikube
alias startKube='minikube start \
  --docker-env HTTP_PROXY=http://host.docker.internal:7890 \
  --docker-env HTTPS_PROXY=http://host.docker.internal:7890 \
  --docker-env NO_PROXY=localhost,127.0.0.1,10.96.0.0/12,192.168.49.0/24'
alias stopKube='minikube stop'
alias deleteKube='minikube delete'

### temporary ###

# add ssh-agent key
alias sshKeys='ssh-add --apple-use-keychain ~/.ssh/hdzb ~/.ssh/id_ed25519 && ssh-add -l'

alias buildTraffic='ssh 40 "cd /data/appBins/traffic/traffic-ui && sh ./package.sh"'
alias buildKms='ssh 50 "cd /data/appBins/kms/kms-ui && sh ./package.sh"'
alias buildRsp='ssh 50 "cd /data/appBins/esim-dev/rsp-ui && sh ./package.sh"'
alias buildRspProd='ssh 54 "cd /data/appBins/esim/rsp-ui && sh ./package.sh"'
